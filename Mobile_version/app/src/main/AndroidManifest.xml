<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.spellit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpellIT"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MenuActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.categories.CategoriesActivity" />
        <activity android:name=".activities.words.WordsActivity" />
        <activity android:name=".activities.AddCategoryActivity" />
        <activity android:name=".activities.words.WordLearning" />
        <activity android:name=".activities.words.AddWord" />
        <activity android:name=".activities.SettingsActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>